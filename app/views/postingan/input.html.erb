<div class="main posts-new">
    <div class="container">
        <h1>Input Data</h1>
        <%= form_tag("/postingan/create") do %>
        <div class="form">
            <div class="form-body">
                <label>Judul</label>
                <input name="judul" required>

                <label>Deskripsi</label>
                <textarea name="deskripsi" required></textarea>

                <button type="submit">Simpan</button>
                <a href="/postingan/index">Kembali</a>
            </div>
        </div>
        <% end %>
    </div>
</div>